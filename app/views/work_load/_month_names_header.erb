<%
# Renders the headers of the month names
%>

<%
  monthsInTimespan = ListUser::getMonthsInTimespan(@timeSpanToDisplay)
%>
<% monthsInTimespan.each do |month| %>
  <th class="month-name" colspan="<%= (month[:last_day].day - month[:first_day].day) + 1 %>" scope="colgroup">
    <% if ((month[:last_day] - month[:first_day]) + 1) >= 5 then %>
      <%= "#{month_name(month[:first_day].month)} #{month[:first_day].year}" %>
    <% end %>
  </th>
<% end %>